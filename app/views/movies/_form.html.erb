<%= form_with model: @movie do |f| %>
  <div class = "form-group">
    
    <%= f.text_field :title, required: true, placeholder: "Title", class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= f.text_field :duration, required: true, placeholder: "Duration", class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= f.text_field :genre, required: true, placeholder: "Genre", class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= f.text_field :description, required: true, placeholder: "Description", class: "form-control"  %>
  </div>
  <div class = "form-group">
    <%= f.text_field :Trailor, required: true, placeholder: "Trailor", class: "form-control"  %>
  </div>
  <%= f.submit %>
  <% end %>

 